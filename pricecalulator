# Dessert Pricing Calculator

def calculate_price(dessert_type, quantity, mixins):
    # Base prices
    base_prices = {
        "cookies": 12,  # per dozen
        "cupcakes": 15,  # per dozen
        "lunchbox_cake": 15  # per cake
    }

    # ppu for less than a dozen
    per_unit_prices = {
        "cookies": 1,  # per cookie
        "cupcakes": 1.25  # per cupcake 
    }

    # Mix-in/add-on prices
    mixin_prices = {
        # Cookie mix-ins
        "chocolate_chunks": 2,
        "toffee_bits": 2,
        "m&ms": 2,
        "chopped_pecans": 3,
        "macadamia_nuts": 3,
        "white_chocolate_chips": 2,
        "matcha": 3,
        
        # Cupcake add-ons
        "ganache": 2,
        "salted_caramel": 2,
        "fruit_preserves": 2,
        "pastry_cream": 3,

        "none": 0
    }

    # Calculate base price
    if dessert_type in ["cookies", "cupcakes"]:
        dozens = quantity // 12
        remainder = quantity % 12

        # Base price for dozens and remainder
        price = dozens * base_prices[dessert_type]
        if remainder > 0:
            price += remainder * per_unit_prices[dessert_type]
    elif dessert_type == "lunchbox_cake":
        price = quantity * base_prices[dessert_type]
    else:
        return "Invalid dessert type"

    # Add mix-in prices
    for mixin in mixins:
        if mixin in mixin_prices:
            price += mixin_prices[mixin] * quantity
        else:
            return f"Invalid mix-in: {mixin}"

    return price

# User Input
def main():
    print("Welcome to the Dessert Pricing Calculator!")

    # Get dessert type
    dessert_type = input("Enter the type of dessert (cookies, cupcakes, lunchbox_cake): ").lower()

    # Get quantity
    quantity = int(input("Enter the quantity: "))

    # Get mix-ins
    print("Available mix-ins for cookies: chocolate_chunks, toffee_bits, m&ms, chopped_pecans, macadamia_nuts, white_chocolate_chips, matcha")
    print("Available add-ons for cupcakes: ganache, salted_caramel, fruit_preserves, pastry_cream")
    mixins = input("Enter mix-ins separated by commas (e.g., chocolate_chunks,toffee_bits): ").lower().split(',')

    # Calculate and display price
    total_price = calculate_price(dessert_type, quantity, mixins)
    print(f"The total price for your order is: ${total_price:.2f}")

if __name__ == "__main__":
    main()
